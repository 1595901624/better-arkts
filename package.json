{
  "name": "better-arkts",
  "displayName": "Better ArkTS Syntax Highlighting",
  "description": "(非官方) ArkTS 语法高亮支持插件，为 HarmonyOS/OpenHarmony 开发提供语法高亮功能，同时支持 JSON5 和 HML 语法",
  "version": "0.0.6",
  "publisher": "cloris",
  "icon": "icons/arkts_icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/1595901624"
  },
  "repository": {
    "url": "https://github.com/1595901624/better-arkts"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "arkts",
    "harmonyos",
    "openharmony",
    "arkui",
    "syntax",
    "highlighting",
    "json5",
    "hml"
  ],
  "contributes": {
    "languages": [
      {
        "id": "arkts",
        "aliases": [
          "ArkTS",
          "arkts"
        ],
        "extensions": [
          ".ets"
        ],
        "icon": {
          "id": "arkts-icon",
          "light": "./icons/ets.svg",
          "dark": "./icons/ets.svg"
        },
        "configuration": "./language-configuration.json"
      },
      {
        "id": "arkts-test",
        "aliases": [
          "ArkTS Test",
          "arkts-test"
        ],
        "extensions": [
          ".test.ets"
        ],
        "icon": {
          "id": "arkts-test-icon",
          "light": "./icons/test.ets.svg",
          "dark": "./icons/test.ets.svg"
        },
        "configuration": "./language-configuration.json"
      },
      {
        "id": "json5",
        "aliases": [
          "JSON5",
          "json5"
        ],
        "extensions": [
          ".json5"
        ],
        "icon": {
          "id": "json5-icon",
          "light": "./icons/json5.svg",
          "dark": "./icons/json5.svg"
        },
        "configuration": "./language-configuration-json5.json"
      },
      {
        "id": "hml",
        "aliases": [
          "HML",
          "hml",
          "HarmonyOS Markup Language"
        ],
        "extensions": [
          ".hml"
        ],
        "icon": {
          "id": "hml-icon",
          "light": "./icons/hml.svg",
          "dark": "./icons/hml.svg"
        },
        "configuration": "./language-configuration-hml.json"
      }
    ],
    "grammars": [
      {
        "language": "arkts",
        "scopeName": "source.arkts",
        "path": "./syntaxes/arkts.tmLanguage.json"
      },
      {
        "language": "arkts-test",
        "scopeName": "source.arkts",
        "path": "./syntaxes/arkts.tmLanguage.json"
      },
      {
        "language": "json5",
        "scopeName": "source.json5",
        "path": "./syntaxes/json5.tmLanguage.json"
      },
      {
        "language": "hml",
        "scopeName": "source.hml",
        "path": "./syntaxes/hml.tmLanguage.json"
      }
    ],
    "icons": {
      "arkts-icon": {
        "description": "ArkTS File Icon",
        "default": {
          "fontPath": "./icons/arkts.woff",
          "fontCharacter": "\\E001"
        }
      },
      "arkts-test-icon": {
        "description": "ArkTS Test File Icon",
        "default": {
          "fontPath": "./icons/arkts.woff",
          "fontCharacter": "\\E002"
        }
      },
      "hml-icon": {
        "description": "HML File Icon",
        "default": {
          "fontPath": "./icons/arkts.woff",
          "fontCharacter": "\\E003"
        }
      }
    },
    "files.associations": {
      "*.ets": "arkts",
      "*.test.ets": "arkts-test",
      "*.json5": "json5",
      "*.hml": "hml"
    },
    "configuration": {
      "title": "Better ArkTS",
      "properties": {
        "better-arkts.experimental.hmlFormat.enabled": {
          "type": "boolean",
          "default": false,
          "description": "启用实验性的 HML 格式化功能"
        },
        "better-arkts.experimental.arktsFormat.enabled": {
          "type": "boolean",
          "default": false,
          "description": "启用实验性的 ArkTS (.ets) 格式化功能"
        },
        "better-arkts.format.indentSize": {
          "type": "number",
          "default": 2,
          "description": "格式化时的缩进大小"
        },
        "better-arkts.format.singleQuote": {
          "type": "boolean",
          "default": true,
          "description": "使用单引号而不是双引号"
        },
        "better-arkts.format.semicolon": {
          "type": "boolean",
          "default": true,
          "description": "在语句末尾添加分号"
        },
        "better-arkts.format.trailingComma": {
          "type": "boolean",
          "default": false,
          "description": "在多行结构末尾添加逗号"
        }
      }
    }
  },
  "activationEvents": [
    "onLanguage:arkts",
    "onLanguage:arkts-test",
    "onLanguage:json5",
    "onLanguage:hml"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  }
}
